<div class="navbar navbar-expand-sm navbar-light navbar-lewagon position-absolute">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo_g.png" %>
  <% end %>
  <div>
    <% if user_signed_in? %>
      <span class="welcome mr-3">
        <strong>
          Bienvenue <%= "#{current_user.primary_first_name.capitalize} #{current_user.primary_last_name.capitalize}" %>
        </strong>
      </span>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if current_user.admin %>
              <%= link_to "Experience Designer", admin_index_path , class: "dropdown-item text-right" %>
            <% end %>
            <%= link_to "Mes Experiences", experiences_path, class: "dropdown-item text-right" %>
            <%= link_to "Fermer Ma Session", destroy_user_session_path, method: :delete, class: "dropdown-item text-right" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item nav-text">
          <%= link_to "S'identifier", new_user_session_path, class: "nav-link", id: "login"%>
        </li>
      <% end %>
    </ul>
  </div>
</div>
